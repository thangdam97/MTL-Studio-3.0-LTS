  "validation_rules": {
    "pre_output_checks": [
      {
        "check": "cjk_character_scan",
        "action": "scan_unicode_range",
        "range": [
          "U+4E00",
          "U+9FFF"
        ],
        "on_detect": "translate_to_vietnamese"
      },
      {
        "check": "completeness_verification",
        "action": "verify_all_source_translated",
        "on_failure": "identify_untranslated_segments"
      },
      {
        "check": "script_purity",
        "action": "verify_latin_alphabet_only",
        "allowed": [
          "A-Z",
          "a-z",
          "Vietnamese_diacritics",
          "punctuation",
          "numbers"
        ],
        "forbidden": [
          "CJK_ideographs"
        ]
      },
      {
        "check": "quotation_marks",
        "action": "verify_standard_quotes",
        "forbidden": [
          "「",
          "」",
          "《",
          "》",
          "『",
          "』"
        ],
        "required": [
          "\""
        ]
      }
    ],
    "error_responses": {
      "cjk_detected": {
        "severity": "critical",
        "action": "halt_output_and_retranslate",
        "message": "CJK character detected - translation incomplete"
      },
      "mixed_script": {
        "severity": "high",
        "action": "separate_and_translate",
        "message": "Mixed script detected - ensure full Vietnamese output"
      },
      "untranslatable_phrase": {
        "severity": "medium",
        "action": "use_descriptive_translation",
        "fallback": "romanization_with_explanation"
      }
    }
  },
  "translation_strategies": {
    "contextual_meaning": {
      "description": "Extract meaning from context rather than literal translation",
      "priority": 1,
      "examples": [
        {
          "source": "都合が良すぎる",
          "literal": "convenience is too good",
          "contextual": "too convenient/coincidental",
          "vietnamese": "thuận tiện quá"
        },
        {
          "source": "気が付かない",
          "literal": "spirit doesn't attach",
          "contextual": "doesn't notice",
          "vietnamese": "không để ý"
        }
      ]
    },
    "functional_equivalence": {
      "description": "Focus on function/intent rather than literal words",
      "priority": 2,
      "examples": [
        {
          "source": "仕方がない",
          "function": "expressing resignation/acceptance",
          "vietnamese": [
            "không còn cách nào",
            "đành chịu thôi"
          ]
        },
        {
          "source": "どうしよう",
          "function": "worried pondering",
          "vietnamese": [
            "làm sao đây",
            "giờ phải làm gì"
          ]
        }
      ]
    },
    "decompose_and_translate": {
      "description": "Break complex compounds into translatable parts",
      "priority": 3,
      "examples": [
        {
          "source": "図書館",
          "parts": [
            "図書 = books/documents",
            "館 = building/hall"
          ],
          "vietnamese": "thư viện"
        },
        {
          "source": "運動会",
          "parts": [
            "運動 = exercise/sports",
            "会 = meeting/event"
          ],
          "vietnamese": "hội thao"
        }
      ]
    }
  },
  "quality_metrics": {
    "success_criteria": [
      "zero_cjk_characters",
      "full_vietnamese_readability",
      "meaning_preserved",
