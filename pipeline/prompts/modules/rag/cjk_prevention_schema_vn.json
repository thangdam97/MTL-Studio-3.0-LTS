    "common_leak_patterns": {
      "shape_descriptors": {
        "く": {
          "hiragana": "ku",
          "context": "shape description (C-shape, bent over)",
          "vietnamese": [
            "cong như chữ C",
            "hình chữ C",
            "uốn cong"
          ],
          "leak_example": "gập người thành hình chữ \"く\"",
          "fixed_example": "gập người cong như chữ C"
        }
      },
      "education_terms": {
        "進学": {
          "readings": ["shingaku"],
          "meaning": "advancing to higher education",
