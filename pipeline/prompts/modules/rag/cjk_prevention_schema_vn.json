  "schema_version": "1.0",
  "schema_name": "CJK Prevention Protocol for Vietnamese Translation",
  "purpose": "Prevent Chinese/Japanese character leakage in Vietnamese output",
  "unicode_range": {
    "forbidden_start": "U+4E00",
    "forbidden_end": "U+9FFF",
    "description": "CJK Unified Ideographs - Must be translated to Vietnamese"
  },
  "detection_rules": {
    "zero_tolerance": true,
    "confidence_threshold": 0.7,
    "context_window": 5,
    "check_compounds": true,
    "check_isolation": true
  },
